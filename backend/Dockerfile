# Base Image
FROM python:3.8.3

# create and set working directory
RUN mkdir /app
WORKDIR /app

# Add current directory code to working directory
ADD . /app/

# set default environment variables
ENV PYTHONUNBUFFERED 1
ENV LANG C.UTF-8
ENV DEBIAN_FRONTEND=noninteractive

ARG PORT
ARG DEBUG
ARG SSL_REDIRECT
ARG CORS_ALLOWED
ARG ALLOWED_HOSTS
ARG SECRET_KEY
ARG DB_ENGINE
ARG DB_NAME
ARG DB_HOST
ARG DB_USER
ARG DB_PASS
ARG GMAIL_API_CLIENT_ID
ARG GMAIL_API_CLIENT_SECRET
ARG GMAIL_API_REFRESH_TOKEN
ARG GOOGLE_OAUTH2_CLIENT_ID
ARG GOOGLE_OAUTH2_CLIENT_SECRET
ARG VIEW_REDIRECT_URL
ARG RECAP_PRIV_KEY
ARG RECAP_PUB_KEY
ARG GEOCODE_API_KEY
ARG GA_VIEW_ID
ARG GOOGLE_OAUTH2_CLIENT_EMAIL
ARG GOOGLE_OAUTH2_PRIVATE_KEY
ARG GOOGLE_ANALYTICS_PRIVATE_KEY
ARG GOOGLE_ANALYTICS_CLIENT_EMAIL

ENV PORT=${PORT}
ENV DEBUG=${DEBUG}
ENV SSL_REDIRECT=${SSL_REDIRECT}
ENV CORS_ALLOWED=${CORS_ALLOWED}
ENV ALLOWED_HOSTS=${ALLOWED_HOSTS}
ENV SECRET_KEY=${SECRET_KEY}
ENV DB_ENGINE=${DB_ENGINE}
ENV DB_NAME=${DB_NAME}
ENV DB_HOST=${DB_HOST}
ENV DB_PASS=${DB_PASS}
ENV GMAIL_API_CLIENT_ID=${GMAIL_API_CLIENT_ID}
ENV GMAIL_API_CLIENT_SECRET=${GMAIL_API_CLIENT_SECRET}
ENV GMAIL_API_REFRESH_TOKEN=${GMAIL_API_REFRESH_TOKEN}
ENV GOOGLE_OAUTH2_CLIENT_ID=${GOOGLE_OAUTH2_CLIENT_ID}
ENV GOOGLE_OAUTH2_CLIENT_SECRET=${GOOGLE_OAUTH2_CLIENT_SECRET}
ENV VIEW_REDIRECT_URL=${VIEW_REDIRECT_URL}
ENV RECAP_PRIV_KEY=${RECAP_PRIV_KEY}
ENV RECAP_PUB_KEY=${RECAP_PUB_KEY}
ENV GEOCODE_API_KEY=${GEOCODE_API_KEY}
ENV GA_VIEW_ID=${GA_VIEW_ID}
ENV GOOGLE_OAUTH2_CLIENT_EMAIL=${GOOGLE_OAUTH2_CLIENT_EMAIL}
ENV GOOGLE_OAUTH2_PRIVATE_KEY=${GOOGLE_OAUTH2_PRIVATE_KEY}
ENV GOOGLE_ANALYTICS_PRIVATE_KEY=${GOOGLE_ANALYTICS_PRIVATE_KEY}
ENV GOOGLE_ANALYTICS_CLIENT_EMAIL=${GOOGLE_ANALYTICS_CLIENT_EMAIL}

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    tzdata \
    python3-setuptools \
    python3-pip \
    python3-dev \
    python3-venv \
    git \
    && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*


# install environment dependencies
RUN pip3 install --upgrade pip
RUN pip3 install pipenv && pip3 install -r requirements.txt

# Install project dependencies
RUN pipenv install --skip-lock --system --dev

EXPOSE ${PORT}
CMD python manage.py migrate && uwsgi --socket :${PORT} --module server.wsgi:application